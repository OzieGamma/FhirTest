@model Patient

@{
    ViewData["Title"] = "Import";
}

<h2>Import</h2>

<form asp-action="Create" asp-controller="Patient">
    <div class="form-horizontal">
        <h4>Patient</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>

        <!-- First name -->
        <div class="form-group">
            <label asp-for="GivenName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="GivenName" class="form-control" disabled/>
                <span asp-validation-for="GivenName" class="text-danger" />
            </div>
        </div>

        <!-- Last name -->
        <div class="form-group">
            <label asp-for="FamilyName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="FamilyName" class="form-control" disabled/>
                <span asp-validation-for="FamilyName" class="text-danger" />
            </div>
        </div>

        <!-- Gender -->
        <div class="form-group">
            <label asp-for="Gender" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Gender" class="form-control" asp-items="new SelectList(Enum.GetNames(typeof(Gender)))" disabled></select>
                <span asp-validation-for="Gender" class="text-danger" />
            </div>
        </div>

        <!-- Date of birth -->
        <div class="form-group">
            <label asp-for="DateOfBirth" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DateOfBirth" class="form-control" disabled/>
                <span asp-validation-for="DateOfBirth" class="text-danger" />
            </div>
        </div>

        <!-- Comments -->
        <div class="form-group">
            <label asp-for="Comments" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Comments" class="form-control" disabled/>
                <span asp-validation-for="Comments" class="text-danger" />
            </div>
        </div>

        @if (ViewData.ModelState.IsValid)
        {
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Import" class="btn btn-default"/>
                </div>
            </div>
        }
    </div>
</form>

<div>
    <a asp-action="Search">Back to search</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
